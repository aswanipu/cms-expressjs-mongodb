
<!-- Add header Partial Layout-->
<%- include('layouts/header'); -%>
<!-- Add nav Partial Layout-->
<%- include('layouts/nav'); -%>

<section class="table-section">
    <h2>Edit Pages</h2>
    <table>
        <thead>
            <tr>
                <th>Page</th>
                <th>Manage Edit</th>
                <th>Manage Delete</th>
            </tr>
        </thead>
        <tbody>
            <% if(typeof(pages) !== 'undefined' && pages.length > 0) { %>
                <% pages.forEach(function(page) { %>
                    <tr>
                        <td><%= page.title %></td>
                        <td><a href="/edit-page/<%= page._id %>">Edit</a></td>
                        <td><a href="/delete-page/<%= page._id %>" onclick="return confirm('Are you sure you want to delete this page?');">Delete</a></td>
                    </tr>
                <% }); %>
                <% } else { %>
                <tr>
                    <td colspan="3"><%= error || 'No pages found.' %></td>
                </tr>
                <% } %>
        </tbody>
    </table>
           
   
</section>

